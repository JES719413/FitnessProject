@using Newtonsoft.Json;
<style>
    table {
        border-collapse: collapse;
        font-family: Tahoma, Geneva, sans-serif;
    }

        table td {
            padding: 15px;
        }

        table thead tr {
            background-color: #494F56;
            color: #ffffff;
            font-weight: bold;
            font-size: 13px;
            border: 1px solid #494F56;
        }

        table tbody td {
            color: #605D5D;
            border: 1px solid #D7DADC;
        }

        table tbody tr {
            background-color: #F1F1F2
        }

            table tbody tr:nth-child(odd) {
                background-color: #ffffff;
            }
</style>
<h1>Class Members</h1>

@if (ViewBag.Members.Count != 0)
{
    <h2>@ViewBag.Title &nbsp; @ViewBag.Start</h2>
    <h1></h1>
    <table>
        <thead>
            <tr>
                <th>Class Members</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in ViewBag.Members)
            {
                <tr>
                    <td>@member.memberId</td>
                    <td><a asp-action="Delete" asp-controller="scheduler" asp-route-id="@member.Id" asp-route-title="@ViewBag.Title" asp-route-start="@ViewBag.Start" asp-route-members="">Remove</a></td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No members found for this class.</p>
}


