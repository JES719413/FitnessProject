@model Fitness__Project.Models.Membership

@{
    ViewData["Title"] = "Create";
}


@if (TempData["isMember"] != null)
{
    <script>
        alert('@TempData["isMember"]');
    </script>
}

<h1>Create</h1>

<h4>Membership</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="firstName" class="control-label"></label>
                <input asp-for="firstName" class="form-control" />
                <span asp-validation-for="firstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastName" class="control-label"></label>
                <input asp-for="lastName" class="form-control" />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="birthday" class="control-label"></label>
                <input asp-for="birthday" class="form-control" />
                <span asp-validation-for="birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="membershipType" class="control-label"></label>
                <select class="form-control" asp-for="membershipType" id="membershipType" name="membershipType">
                    <option>Select Membership</option>
                    <option value="Unlimited">Unlimited</option>
                    <option value="15-Day">15-Day</option>
                    <option value="10-Day">10-Day</option>
                    <option value="8-Day">8-Day</option>
                </select>
                <span asp-validation-for="membershipType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="email" class="form-control" type="hidden" value="@User.Identity.Name" />
            </div>
            <div class="form-group">
                <input asp-for="membershipID" class="form-control" type="hidden" value="@User.Identity.Name" />
            </div>
            <div class="form-group">
                <input asp-for="startDate" class="form-control" type="hidden" value="@DateTime.Now" />
            </div>
            <div class="form-group">
                <input asp-for="startDate" class="form-control" type="hidden" value="@DateTime.Now" />
            </div>
            <div class="form-group">
                <input asp-for="status" class="form-control" type="hidden" value="Active" />
            </div>
            <div class="form-group">
                <input type="submit" value="Continue to Payment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
